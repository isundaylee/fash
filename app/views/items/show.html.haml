#showcase
  - 4.times do
    %img{:src => "http://placehold.it/600x400", :alt => ""}/

#info
  .info-section
    %p.info-title Category
    %p.info-content= @item.category
  .info-section
    %p.info-title Gender & Size
    %p.info-content= @item.gender.capitalize + ' - ' + @item.size
  .info-section
    %p.info-title Price
    %p.info-content= '$' + @item.price.to_s + ' per week'
  .info-section
    %p.info-title Owner
    %p.info-content Jiahao Li
  .info-section
    %img.info-avatar{src: 'https://scontent.xx.fbcdn.net/hphotos-xpa1/v/t1.0-9/12004921_802414749857912_7299638249162777029_n.jpg?oh=b502fb48853e9a1928eee7f5babc8425&oe=56BFAC70'}
