<h2>Update My Profile</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'centre-form', method: :put}) do |f| %>
  <%= devise_error_messages! %>

  <%= f.text_field :name, placeholder: 'your name', autofocus: true %>
  <%= f.email_field :email, placeholder: 'your email address' %>
  <%= f.password_field :password, placeholder: 'new password (leave blank if you don\'t want to change it', autocomplete: "off" %>
  <%= f.password_field :password_confirmation, placeholder: 'your new password, again :)', autocomplete: "off" %>
  <%= f.text_field :address, placeholder: 'your address (dorm name or street address)' %>

  <%= f.password_field :current_password, placeholder: 'your current password', autocomplete: 'off' %>

  <%= f.submit "Update My Profile" %>
<% end %>
