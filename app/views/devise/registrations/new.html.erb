<h2>Join us at FASH</h2>

<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'centre-form'}) do |f| %>
    <%= devise_error_messages! %>

    <%= f.email_field :email, placeholder: 'your email address', autofocus: true %>
    <%= f.password_field :password, placeholder: 'your password', autocomplete: "off" %>
    <%= f.password_field :password_confirmation, placeholder: 'your password, again :)', autocomplete: "off" %>

    <%= f.submit "Sign up" %>
  <% end %>
</div>